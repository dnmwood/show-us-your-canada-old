<section class="enter-to-win">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6 col-md-offset-1">
        <h1>TRUE STORIES of the<br>TRUE NORTH</h1>
        <h3>Let the world take your word for it – not ours – on just how amazing Canada is. Post your story about the stunning landscapes, the sparkling waters, your time around a bonfire, in a canoe or on a dock, and then share your post with friends in your new country so they can vote for YOU. You could win a trip home to Canada, and one of your friends could win a spectacular getaway to the wilderness north of Toronto too!</h3>
        <div class="enter-to-win-button">
          <a id="enter-now-button" class="button-main">ENTER NOW</a>
        </div>
      </div>
      <div class="col-md-5">
        <img src="http://res.cloudinary.com/dx3z90dgl/image/upload/v1486396186/Polaroid_uiq7pm.png" alt="Rto12logo angled 01 a4euwt" class="img-biker">
      </div>
    </div>
  </div>
</section>

  <section class="choose-canada">
    <div class="container-fluid">
      <div class="green-board">
        <div class="col-sm-8 col-sm-offset-2 board-text">
          <h2>CHECK OUT THE STORIES</h2>
          <h1>BE INSPIRED BY CANADIANS</h1>
          <a class="button-main vote-canada-button" href="/entries">READ MORE</a>
        </div>
      </div>
    </div>
  </section>

  <section class="container-fluid entries-last-six">
    <div class="row flex-md-top">
    <% @entries.last(2).each do |entry| %>
      <div class="col-md-6 image-block" id="image<%= entry.id %>" data-link="<%= entry_path(entry) %>">

      <% if entry.filter_no_hashtag %>
      <style>
        #image<%= entry.id %> { background-image: url(<%= entry.filter_no_hashtag %>); background-size: cover; height: 400px; background-repeat: no-repeat; background-position: center center;}
      </style>
      <% else %>
      <style>
        #image<%= entry.id %> { background-image: url(<%= entry.avatar_url %>); background-size: cover; height: 400px; background-repeat: no-repeat; background-position: center center;}
      </style>
      <% end %>
        <%#= image_tag(entry.filter) %>
        <%#= cl_image_tag(entry.filter, :width => 800, :height => 400, :crop => "fill") %>
        <div class="hover-content-top">
          <span class="hover-user"><%= entry.user.name %></span><br>
          <span class="hover-title"><h3>
            <% if entry.title %>
            <%= entry.title %>
            <% else %>
            This is our Canada
            <% end %>
          </h3></span><br><br><br>
          <!-- <span class="hover-votes"><h3><i class="fa fa-heart-o" aria-hidden="true"></i><%# entry.votes.where(email_confirmed: true).count %> VOTES </h3></span><br> -->
          <div class="hover-content-bottom-right">
            <%= link_to "SEE MORE", entry_path(entry) %>
          </div>
        </div>
        <% if entry.location != nil %>
          <img class="authentic-image-home" src="http://res.cloudinary.com/dx3z90dgl/image/upload/v1487365509/Updated_Regional_Logo_01-02_a83j3k.png">
        <% end %>
        <div class="hover-content-bottom">
          <span class="hover-share">SHARE</span><br>
          <a href="#" class="prettySocial fa fa-facebook sign-in-facebook" data-title="This is <%= entry.name %>'s Canada" data-url="http://www.shareyourcanada150.com<%= entry_path(entry) %>" data-type="facebook" data-description="This is <%= entry.name %>'s Canada" data-media="<%= entry.avatar_url %>"></a>
          <a href="#" class="prettySocial fa fa-twitter sign-in-facebook" data-title="This is <%= entry.name %>'s Canada" data-url="http://www.shareyourcanada150.com<%= entry_path(entry) %>" data-type="twitter" data-description="This is <%= entry.name %>'s Canada" data-media="<%= entry.avatar_url %>"></a>
        </div>
      </div>
    <% end %>
    </div>
